<p id="notice"><%= notice %></p>

<div id="wrapper">

  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="#">
          Hi <%current_user.email%>
        </a>
      </li>
      <li>
        <%= link_to "News Feed", footprint_path %>
      </li>
      <li>
        <%= link_to "My Notes", new_note_path %>
      </li>

    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="center jumbotron vertical-center">
            <form class = "form-horizontal">
              <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></span>
                <input type="text" class="form-control" placeholder="Discover new places,share expereinces,meet people" aria-describedby="sizing-addon1">
              </div>
              <%= link_to "Search", '#', class: "btn btn-lg btn-primary", type: "submit" %>

            </form>

          </div>
        </div>


      </div>

    </div>
    <table>
      <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @notes.each do |note| %>
          <div>
            <%=note.title%>
            <%= note.city%>
            <%= note.content%>
            <%= note.tags%>
          </div>
          <tr>
            <td><%= link_to 'Show', note %></td>
            <td><%= link_to 'Edit', edit_note_path(note) %></td>
            <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Note', new_note_path %>

  </div>
</div>
