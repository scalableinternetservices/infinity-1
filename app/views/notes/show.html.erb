<p id="notice"><%= notice %></p>
<%= render :partial =>@note %>

<%= link_to 'Edit', edit_note_path(@note) %> |
<%= link_to 'Back', notes_path %>

<h2>Comments</h2>
<div id="comments">
  <%= render :partial => @note.comments %>
</div>


<%= form_for [@note, Comment.new] do |f| %>

      <h5><%= f.label :body, "Add New Comment" %></h5>

      <%= image_tag @user.picture_url.to_s , :class => "img-thumbnail" , :style => "width:50px"  if @user.picture? %>
      <b><%= @user.first_name %> <%= @user.last_name %></b>
      <br/><br/><%= f.text_area :body%>
      <br/><%= f.submit "Add"%>


<% end %>
