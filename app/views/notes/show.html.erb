<p id="notice"><%= notice %></p>

<%= render :partial =>@note %>


  <button type="submit" formaction=edit_note_path(@note) class="btn btn-primary">Edit</button>

<%= link_to 'Edit', edit_note_path(@note) %> |
<%= link_to 'Back', notes_path %>

<h2>Comments</h2>
<div id="comments">
  <%= render :partial => @note.comments %>
</div>


<%= form_for [@note, Comment.new] do |f| %>
    <p>
      <%= f.label :body, "New comment" %><br/>
      <%= f.text_area :body %>
    </p>
    <p><%= f.submit "Add comment" %></p>
<% end %>
