<%= render :partial => 'footprints/user_sidepanel' %>
<!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row" style="background: #c0dfd9">
        <div class="col-lg-3" >
          <br/>
          <%= image_tag @user.picture_url.to_s , :class => "img-thumbnail" , :style => "width:200px;height: 200px;"  if @user.picture? %>
          <br/><br/>
        </div>

        <div class="col-lg-9" style="font-family: Monaco">
          <br/>
          <h1>"<%= @user.quote %>
          <%= "To travel is to take a journey into yourself." unless @user.quote?  %>"</h1><br/>
            <br/>
        </div>
    </div>
      <div class="row">
        <div class="col-lg-12">
          <h3>User Information</h3>
          <h5>Name: <%= @user.first_name %> <%= @user.last_name %></h5>
          <h5>Born on:  <%= @user.date_of_birth.strftime('%v')%></h5>
          <h5>Interests:  <%= @user.interests%></h5>
          <h5>Email:  <%= @user.email%></h5>

        </div>
      </div>
  </div>
</div>
<!-- /#page-content-wrapper -->







