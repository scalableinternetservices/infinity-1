<h2>Log in</h2>
<% cache do %>

<br/><br/>
<br/><br/><br/><br/><br/><br/><br/><br/>
<div class="col-sm-offset-2 col-sm-11">
<div id="loginPage" class="container" style="float:left">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-lock"></span> Login</div>
        <div class="panel-body">

          <br/>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email , class: 'col-sm-3 control-label'%>
                <%= f.email_field :email, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label :password , class: 'col-sm-3 control-label'%>
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
              <div class="col-sm-offset-3 col-sm-11">
              <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
              <% end -%>
                </div>
              <div class="col-sm-offset-4 col-sm-7">
              <div class="actions">
                <%= f.submit "Log in" ,class: "btn btn-success btn-sm" %><br/>
               </div>

              </div>
              <div class="col-sm-offset-3 col-sm-9">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              <% end -%>
              </div>
        <% end %>
        </div>
        <br/>
        <div class="panel-footer">
          <div class="col-sm-offset-3 col-sm-15">
          Not Registred? <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-default btn-sm'  %>
          <% end -%>
            </div>
        </div>
      </div>
    </div>
  </div>

</div>
</div>
<% end %>